datasource mysql {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  owner     Project[]
  password  String
  roles     Json
  tasks     Task[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Project {
  createdAt   DateTime  @default(now())
  description String?
  dueDate     DateTime?
  id          String    @id @default(cuid())
  name        String
  owner       User?     @relation(fields: [ownerId], references: [id])
  ownerId     String?   @unique
  startDate   DateTime?
  tasks       Task[]
  updatedAt   DateTime  @updatedAt
}

model Task {
  assigned   User?           @relation(fields: [assignedId], references: [id])
  assignedId String?
  createdAt  DateTime        @default(now())
  estimation Int?
  id         String          @id @default(cuid())
  project    Project?        @relation(fields: [projectId], references: [id])
  projectId  String?
  startDate  DateTime?
  status     EnumTaskStatus?
  title      String?         @unique
  updatedAt  DateTime        @updatedAt
}

enum EnumTaskStatus {
  New
  Pending
  Ongoing
  Done
}
